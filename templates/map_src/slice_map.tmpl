    var items map[{{.keytype}}]{{.valtype}}
	var order []{{.keytype}}

	buf := bytes.NewBuffer(data)
	dec := gob.NewDecoder(buf)
	if err = dec.Decode(&items); err == nil {
		err = dec.Decode(&order)
	}

	if err == nil {
 {{- if .Safe}}
        o.Lock(){{end}}
        o.items = items
        o.order = order
 {{- if .Safe}}
        o.Unlock(){{end}}
