	cp := New{{.Safe}}{{.KeyType}}{{.ValType}}SliceMap()

	o.Range(func(key {{.keytype}}, value {{.valtype}}) bool {
{{- if .valueIsCopier}}
        value = value.Copy(){{end}}

{{- if .keyIsCopier}}
