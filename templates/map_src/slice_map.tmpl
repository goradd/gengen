	buf := new(bytes.Buffer)
	encoder := gob.NewEncoder(buf)

{{- if .Safe}}
	o.RLock()
	defer o.RUnlock(){{end}}

	err = encoder.Encode(o.items)
	if err == nil {
		err = encoder.Encode(o.order)
	}
	data = buf.Bytes()
	return
}

