// The Safe{{.KeyType}}{{.ValType}}SliceMap satisfies the {{.KeyType}}{{.ValType}}MapI interface.
type Safe{{.KeyType}}{{.ValType}}SliceMap struct {
	sync.RWMutex
	items map[{{.keytype}}]{{.valtype}}
