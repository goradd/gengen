	if i.Len() != o.Len() {
		return false
	}
	var ret = true

	o.Range(func(k {{.keytype}}, v {{.valtype}}) bool {
		if !i.Has(k) || v != i.Get(k) {
			ret = false
			return false
		}
		return true
	})
	return ret
}

