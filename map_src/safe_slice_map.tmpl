	buf := bytes.NewBuffer(data)
	dec := gob.NewDecoder(buf)
	o.Lock()
	defer o.Unlock()
	err := dec.Decode(&o.items)
	if err == nil {
		err = dec.Decode(&o.order)
	}
	return err
}

