func (o *Safe{{.KeyType}}{{.ValType}}SliceMap) Get(key {{.keytype}}) (val {{.valtype}}) {
	o.RLock()
	defer o.RUnlock()

    if o.items != nil {
    	val, _ = o.items[key]
    }
	return
}

