func (o *Safe{{.KeyType}}{{.ValType}}SliceMap) UnmarshalJSON(data []byte) error {
	o.Lock()
	defer o.Unlock()
	err := json.Unmarshal(data, &o.items)
	if err == nil {
		// Create a default order, since these are inherently unordered
		o.order = make([]string, len(o.items))
		i := 0
		for k := range o.items {
			o.order[i] = k
			i++
		}
	}
	return err
}


